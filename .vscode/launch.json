  "version": "0.2.0",
  "configurations": [    

    {
      "type": "node",
      "request": "attach",
      "remoteRoot": "/opt/app",
      "name": "Attach in Docker",
      "protocol": "auto",
      "port": 5858,
      "restart": true,
      "timeout": 60000,
      "localRoot": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/app.js"
    }
  ]
}